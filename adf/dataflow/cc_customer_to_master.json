{
	"name": "cc_customer_to_master",
	"properties": {
		"folder": {
			"name": "CC"
		},
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "Dwh_Sql",
						"type": "DatasetReference"
					},
					"name": "sourceCC"
				},
				{
					"dataset": {
						"referenceName": "Dwh_Sql",
						"type": "DatasetReference"
					},
					"name": "sourceMaster"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "Dwh_Sql",
						"type": "DatasetReference"
					},
					"name": "sinkMaster"
				},
				{
					"dataset": {
						"referenceName": "Dwh_Sql",
						"type": "DatasetReference"
					},
					"name": "sinkInsertMaster"
				}
			],
			"transformations": [
				{
					"name": "deriveClean"
				},
				{
					"name": "aggregateDedup"
				},
				{
					"name": "getMaxMasterId"
				},
				{
					"name": "lookupExisting"
				},
				{
					"name": "splitRecords"
				},
				{
					"name": "crossJoinMaxId"
				},
				{
					"name": "generateMasterIds"
				},
				{
					"name": "selectForInsert"
				},
				{
					"name": "selectForUpdate"
				},
				{
					"name": "addRowNumber"
				}
			],
			"scriptLines": [
				"source(output(",
				"          id as integer,",
				"          customer_cc_id as integer,",
				"          customer_register as string,",
				"          is_reliable_register as integer,",
				"          customer_name as string,",
				"          full_address as string,",
				"          golden_flag as string,",
				"          register_type as integer,",
				"          phone_number as string,",
				"          customer_created_date as timestamp,",
				"          created_at as timestamp,",
				"          updated_at as timestamp",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> sourceCC",
				"source(output(",
				"          id as integer,",
				"          customer_master_id as integer,",
				"          customer_master_id_prime as integer,",
				"          customer_register as string,",
				"          register_type as integer,",
				"          golden_flag as string,",
				"          customer_name as string,",
				"          full_address as string,",
				"          phone_number as string,",
				"          created_at as timestamp,",
				"          updated_at as timestamp,",
				"          customer_created_date as timestamp",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> sourceMaster",
				"sourceCC derive(customer_register = upper(trim(customer_register)),",
				"          customer_name = trim(customer_name),",
				"          full_address = trim(full_address),",
				"          golden_flag = iif(isNull(golden_flag) || golden_flag == '', 'N', golden_flag),",
				"          phone_number = regexReplace(phone_number, '[^0-9]', ''),",
				"          phone_flag = iif(length(regexReplace(phone_number, '[^0-9]', '')) == 8, 1, 0)) ~> deriveClean",
				"deriveClean aggregate(groupBy(customer_register),",
				"     id = first(id),",
				"          is_reliable_register = max(is_reliable_register),",
				"          phone_number = last(phone_number),",
				"          register_type = max(register_type),",
				"          full_address = last(full_address),",
				"          customer_name = max(customer_name),",
				"          golden_flag = last(golden_flag),",
				"          customer_created_date = min(customer_created_date),",
				"          created_at = max(created_at),",
				"          updated_at = max(updated_at)) ~> aggregateDedup",
				"sourceMaster aggregate(max_customer_master_id = max(customer_master_id)) ~> getMaxMasterId",
				"aggregateDedup, sourceMaster join(aggregateDedup@customer_register == sourceMaster@customer_register,",
				"     joinType:'left',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> lookupExisting",
				"lookupExisting split(isNull(sourceMaster@customer_register),",
				"     disjoint: false) ~> splitRecords@(newRecords, existingRecords)",
				"addRowNumber, getMaxMasterId join(true(),",
				"     joinType:'cross',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'right')~> crossJoinMaxId",
				"crossJoinMaxId derive(customer_master_id = coalesce(max_customer_master_id, toLong(0)) + toLong(row_num),",
				"          customer_master_id_prime = mod((12534191 * (coalesce(max_customer_master_id, toLong(0)) + toLong(row_num)) + 12534217), 100000000)) ~> generateMasterIds",
				"generateMasterIds select(mapColumn(",
				"          customer_master_id,",
				"          customer_master_id_prime,",
				"          customer_register,",
				"          register_type,",
				"          golden_flag,",
				"          customer_name,",
				"          full_address,",
				"          phone_number,",
				"          customer_created_date,",
				"          created_at,",
				"          updated_at",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> selectForInsert",
				"splitRecords@existingRecords select(mapColumn(",
				"          id = {sourceMaster@id},",
				"          customer_master_id = {sourceMaster@customer_master_id},",
				"          customer_master_id_prime = {sourceMaster@customer_master_id_prime},",
				"          customer_register = {aggregateDedup@customer_register},",
				"          register_type = {aggregateDedup@register_type},",
				"          golden_flag = {aggregateDedup@golden_flag},",
				"          customer_name = {aggregateDedup@customer_name},",
				"          full_address = {aggregateDedup@full_address},",
				"          phone_number = {aggregateDedup@phone_number},",
				"          customer_created_date = {sourceMaster@customer_created_date},",
				"          created_at = {sourceMaster@created_at},",
				"          updated_at = {aggregateDedup@updated_at}",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> selectForUpdate",
				"splitRecords@newRecords window(asc(splitRecords@newRecords@customer_register, true),",
				"     row_num = rowNumber()) ~> addRowNumber",
				"selectForUpdate sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError') ~> sinkMaster",
				"selectForInsert sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError') ~> sinkInsertMaster"
			]
		}
	}
}