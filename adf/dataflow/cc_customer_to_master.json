{
	"name": "cc_customer_to_master",
	"properties": {
		"folder": {
			"name": "CC"
		},
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "Dwh_Sql",
						"type": "DatasetReference"
					},
					"name": "sourceCC"
				},
				{
					"dataset": {
						"referenceName": "Dwh_Sql",
						"type": "DatasetReference"
					},
					"name": "sourceMaster"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "Dwh_Sql",
						"type": "DatasetReference"
					},
					"name": "sinkMaster"
				},
				{
					"dataset": {
						"referenceName": "Dwh_Sql",
						"type": "DatasetReference"
					},
					"name": "sinkLink"
				}
			],
			"transformations": [
				{
					"name": "deriveClean"
				},
				{
					"name": "selectMaster"
				},
				{
					"name": "aggregateDedup"
				},
				{
					"name": "getMaxMasterId"
				},
				{
					"name": "customerAgId"
				},
				{
					"name": "lookupExisting"
				},
				{
					"name": "selectMasterSource"
				},
				{
					"name": "splitRecords"
				},
				{
					"name": "addRowNumber"
				},
				{
					"name": "crossJoinMaxId"
				},
				{
					"name": "generateMasterIds"
				}
			],
			"scriptLines": [
				"source(output(",
				"          id as integer,",
				"          customer_cc_id as integer,",
				"          customer_register as string,",
				"          is_reliable_register as integer,",
				"          customer_name as string,",
				"          full_address as string,",
				"          golden_flag as string,",
				"          register_type as integer,",
				"          phone_number as string,",
				"          customer_created_date as timestamp,",
				"          created_at as timestamp,",
				"          updated_at as timestamp",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> sourceCC",
				"source(output(",
				"          id as integer,",
				"          customer_master_id as integer,",
				"          customer_master_id_prime as integer,",
				"          customer_register as string,",
				"          register_type as integer,",
				"          golden_flag as string,",
				"          customer_name as string,",
				"          full_address as string,",
				"          phone_number as string,",
				"          created_at as timestamp,",
				"          updated_at as timestamp,",
				"          customer_created_date as timestamp",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> sourceMaster",
				"sourceCC derive(customer_register = upper(trim(customer_register)),",
				"          customer_name = trim(customer_name),",
				"          full_address = trim(full_address),",
				"          golden_flag = iif(isNull(golden_flag) || golden_flag == '', 'N', golden_flag),",
				"          phone_number = regexReplace(phone_number, '[^0-9]', ''),",
				"          phone_flag = iif(length(regexReplace(phone_number, '[^0-9]', '')) == 8, 1, 0)) ~> deriveClean",
				"deriveClean select(mapColumn(",
				"          customer_master_id = id,",
				"          customer_master_id_prime = id,",
				"          customer_register,",
				"          register_type,",
				"          golden_flag,",
				"          customer_name,",
				"          full_address,",
				"          phone_number,",
				"          customer_created_date,",
				"          created_at,",
				"          updated_at",
				"     ),",
				"     skipDuplicateMapInputs: false,",
				"     skipDuplicateMapOutputs: false) ~> selectMaster",
				"deriveClean aggregate(groupBy(customer_register),",
				"     id = first(id),",
				"          is_reliable_register = max(is_reliable_register),",
				"          phone_number = first(phone_number, golden_flag == 'Y'),",
				"          register_type = max(register_type),",
				"          full_address = first(full_address, golden_flag == 'Y'),",
				"          customer_name = first(customer_name, golden_flag == 'Y'),",
				"          golden_flag = iif(countIf(golden_flag == 'Y') > 0, 'Y', 'N'),",
				"          customer_created_date = min(customer_created_date),",
				"          created_at = max(created_at),",
				"          updated_at = max(updated_at)) ~> aggregateDedup",
				"sourceMaster aggregate(max_customer_master_id = max(customer_master_id)) ~> getMaxMasterId",
				" select(mapColumn(",
				"          customer_master_id = id",
				"     ),",
				"     skipDuplicateMapInputs: false,",
				"     skipDuplicateMapOutputs: false) ~> customerAgId",
				"aggregateDedup, selectMasterSource join(aggregateDedup@customer_register == selectMasterSource@customer_register,",
				"     joinType:'left',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> lookupExisting",
				"sourceMaster select(mapColumn(",
				"          customer_master_id,",
				"          customer_master_id_prime,",
				"          customer_register",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> selectMasterSource",
				"lookupExisting split(isNull(selectMasterSource@customer_register),",
				"     disjoint: false) ~> splitRecords@(newRecords, existingRecords)",
				"splitRecords@newRecords keyGenerate(output(row_num as long),",
				"     startAt: 1L,",
				"     stepValue: 1L) ~> addRowNumber",
				"addRowNumber, getMaxMasterId join(true(),",
				"     joinType:'cross',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'right')~> crossJoinMaxId",
				"crossJoinMaxId derive(customer_master_id = coalesce(max_customer_master_id, toLong(0)) + toLong(row_num),",
				"          customer_master_id_prime = mod((12534191 * (coalesce(max_customer_master_id, toLong(0)) + toLong(row_num)) + 12534217), 100000000)) ~> generateMasterIds",
				"selectMaster sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError') ~> sinkMaster",
				"customerAgId sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError') ~> sinkLink"
			]
		}
	}
}